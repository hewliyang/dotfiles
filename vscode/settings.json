{
    // -----  General Editor Settings -----
    "editor.fontFamily": "MonoLisa",
    "editor.fontLigatures": true,
    "editor.fontVariations": true,
    "editor.fontSize": 14,
    "editor.tabSize": 4,
    "editor.wordWrap": "off",
    "editor.lineNumbers": "off",
    "editor.glyphMargin": false,
    "editor.cursorSmoothCaretAnimation": "on",
    "editor.minimap.enabled": false,
    "editor.linkedEditing": true,
    "editor.insertSpaces": true,
    "editor.folding": false,
    "editor.stickyScroll.enabled": false,
    "editor.stickyScroll.scrollWithEditor": false,
    "editor.renderWhitespace": "trailing",
    "editor.accessibilitySupport": "off",
    "editor.guides.highlightActiveBracketPair": true,
    "editor.guides.bracketPairs": true,
    "editor.guides.indentation": true,
    "editor.bracketPairColorization.enabled": true,
    "editor.scrollbar.verticalScrollbarSize": 7,
    // -----  Formatting  -----
    "editor.formatOnSave": true,
    "files.trimTrailingWhitespace": true,
    "editor.formatOnType": true,
    // ----- Terminal Settings -----
    "terminal.integrated.fontFamily": "MonoLisa",
    "terminal.integrated.fontSize": 14,
    "terminal.integrated.lineHeight": 1.3,
    "terminal.integrated.fontWeight": 400,
    "terminal.integrated.gpuAcceleration": "off",
    "terminal.integrated.suggest.enabled": true,
    // ----- Workbench Settings -----
    "workbench.list.smoothScrolling": true,
    "workbench.tree.indent": 12,
    "workbench.tree.enableStickyScroll": false,
    "workbench.tree.expandMode": "singleClick",
    "window.commandCenter": false,
    "breadcrumbs.enabled": false,
    "window.titleBarStyle": "native",
    "workbench.layoutControl.enabled": false,
    "workbench.sideBar.location": "right",
    "workbench.editor.editorActionsLocation": "hidden",
    "workbench.activityBar.orientation": "vertical",
    "workbench.activityBar.location": "hidden",
    "workbench.editor.pinnedTabSizing": "compact",
    "workbench.settings.applyToAllProfiles": [
      "workbench.colorCustomizations"
    ],
    "workbench.colorCustomizations": {
      "[Solarized Light]": {
        "editorGroup.border": "#d3cfc4",
        "editorGroupHeader.tabsBorder": "#d3cfc4",
        "editorGroupHeader.border": "#d3cfc4",
        "tab.border": "#d3cfc4",
        "sideBar.border": "#d3cfc4",
        "sideBarSectionHeader.border": "#d3cfc4",
        "sideBar.background": "#fdf6e3",
        "statusBar.border": "#d3cfc4",
        "statusBar.background": "#eee8d5",
        "statusBar.noFolderBackground": "#eee8d5",
        "editor.background": "#fdf6e3"
      }
    },
    // ----- Custom UI Style Settings ----
    // Font Family
    "custom-ui-style.font.sansSerif": "MonoLisa",
    "custom-ui-style.font.monospace": "MonoLisa",
    // Electron Window Configuration
    "custom-ui-style.electron": {
      "frame": false,
    },
    // Custom CSS Styles
    "custom-ui-style.stylesheet": {
      ".quick-input-header": {
        "padding": "0 !important"
      },
      ".quick-input-header > .quick-input-and-message .monaco-inputbox": {
        "border-radius": "10px 10px 0 0 !important"
      },
      ".quick-input-header > .quick-input-and-message > .quick-input-filter > .quick-input-box input": {
        "padding": "8px 10px !important"
      },
      ".quick-input-list > .monaco-list > .monaco-scrollable-element": {
        "padding": "2px !important"
      },
      ".quick-input-widget": {
        "position": "absolute !important",
        "top": "200px !important",
        "left": "50%",
        "border-radius": "10px",
        "border": "1px solid var(--vscode-textSeparator-foreground) !important",
        "box-shadow": "0 0 60px 0 rgba(0,0,0,0.2) !important"
      }
    },
    // -----  Notebook Settings -----
    "notebook.insertToolbarLocation": "notebookToolbar",
    "notebook.cellToolbarLocation": {
      "jupyter-notebook": "hidden"
    },
    "notebook.output.scrolling": true,
    "notebook.consolidatedRunButton": true,
    "notebook.showCellStatusBar": "visibleAfterExecute",
    "notebook.globalToolbar": true,
    "jupyter.askForKernelRestart": false,
    // -----  Language Specific Settings  -----
    "[yaml]": {
      "editor.insertSpaces": true,
      "editor.tabSize": 2,
      "editor.autoIndent": "advanced",
      "diffEditor.ignoreTrimWhitespace": false
    },
    "[yml]": {
      "editor.insertSpaces": true,
      "editor.tabSize": 2,
      "editor.autoIndent": "advanced",
      "diffEditor.ignoreTrimWhitespace": false
    },
    "[typst]": {
      "editor.wordWrap": "on",
      "editor.semanticHighlighting.enabled": true,
      "editor.tabSize": 2,
      "editor.inlayHints.enabled": "off",
      "editor.wordSeparators": "`~!@#$%^&*()=+[{]}\\|;:'\",.<>/?"
    },
    "[typst-code]": {
      "editor.wordSeparators": "`~!@#$%^&*()=+[{]}\\|;:'\",.<>/?"
    },
    "[bibtex]": {
      "editor.tabSize": 2
    },
    "[python]": {
      "editor.formatOnType": true,
      "editor.defaultFormatter": "charliermarsh.ruff",
      "editor.tabSize": 4
    },
    "[svelte]": {
      "editor.defaultFormatter": "svelte.svelte-vscode",
      "editor.tabSize": 2
    },
    "[typescriptreact]": {
      "editor.defaultFormatter": "esbenp.prettier-vscode",
      "editor.tabSize": 2
    },
    "[javascript]": {
      "editor.defaultFormatter": "esbenp.prettier-vscode",
      "editor.tabSize": 2
    },
    "[typescript]": {
      "editor.defaultFormatter": "esbenp.prettier-vscode",
      "editor.tabSize": 2
    },
    "[html]": {
      "editor.defaultFormatter": "esbenp.prettier-vscode",
      "editor.tabSize": 2
    },
    "[css]": {
      "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[javascriptreact]": {
      "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[markdown]": {
      "files.trimTrailingWhitespace": false
    },
    "[json]": {
      "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    // -----  Extensions Settings -----
    "ruff.enable": true,
    "ruff.lint.enable": false,
    "ruff.format.args": [
      "--line-length=88"
    ],
    "ruff.exclude": [
      "*.ipynb"
    ],
    "typescript.updateImportsOnFileMove.enabled": "always",
    "tinymist.formatterMode": "typstyle",
    "svelte.enable-ts-plugin": true,
    "vsicons.dontShowNewVersionMessage": true,
    // ----- Git Settings -----
    "git.autofetch": true,
    "git.enableSmartCommit": true,
    "git.confirmSync": false,
    "scm.diffDecorations": "none",
    // ----- File Settings -----
    "files.watcherExclude": {
      "**/.svelte-kit/**": true,
      "**/node_modules/**": true,
      "**/build/**": true,
      "**/.venv/**": true
    },
    "files.associations": {
      "*.pcss": "css",
      "*.yml.j2": "jinja-xml"
    },
    // ----- Update Settings -----
    "update.mode": "manual",
    "workbench.colorTheme": "Yi Dark"
}